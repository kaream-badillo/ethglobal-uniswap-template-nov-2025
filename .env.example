# Foundry Configuration
# Copy this file to .env and fill in your values

# RPC URLs
# For local testing (Anvil)
RPC_URL=http://127.0.0.1:8545

# For testnet deployment (e.g., Sepolia, Base Sepolia)
# RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# RPC_URL=https://sepolia.base.org

# Private Key (NEVER commit this to git!)
# Use a test account with no real funds
PRIVATE_KEY=your_private_key_here

# Etherscan API Key (for verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# BaseScan API Key (if deploying to Base)
BASESCAN_API_KEY=your_basescan_api_key_here

# Chain ID
# 1 = Mainnet
# 11155111 = Sepolia
# 84532 = Base Sepolia
# 31337 = Local Anvil
CHAIN_ID=31337

# Deployment Configuration
# Hook address (will be mined)
HOOK_ADDRESS=

# Pool Manager address (Uniswap v4)
POOL_MANAGER_ADDRESS=

# Position Manager address (Uniswap v4)
POSITION_MANAGER_ADDRESS=

# Swap Router address (Uniswap v4)
SWAP_ROUTER_ADDRESS=
